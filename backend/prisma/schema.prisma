generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

// ユーザー
model User {
    id        String   @id
    auth_id   String   @unique
    email     String   @unique
    name      String
    image_url String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    @@map("users")
}
