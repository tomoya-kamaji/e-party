{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true, // 型安全性の向上（厳格モード）
    "moduleResolution": "Node", // Node.jsでのモジュール解決方法
    "esModuleInterop": true, // CommonJSモジュールとの互換性
    "allowSyntheticDefaultImports": true, // デフォルトインポートを許可
    "resolveJsonModule": true, // JSONファイルをインポート可能に
    "baseUrl": "./", // ベースパスの設定
    "paths": {
      "@/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true, // 大文字小文字の不整合を防止
    "skipLibCheck": true, // ライブラリ型チェックをスキップ
    "incremental": true, // 増分コンパイルを有効化
    "noImplicitOverride": true, // `override`指定を明示的に
    "noPropertyAccessFromIndexSignature": true, // 安全なプロパティアクセス
    "useDefineForClassFields": true, // クラスフィールドの初期化で`define`を使用
    "strictNullChecks": true,
    "outDir": "./dist", // 出力ディレクトリを明示的に指定
    "rootDir": "./src", // ソースディレクトリを明示的に指定
    "declaration": true,
    "composite": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
